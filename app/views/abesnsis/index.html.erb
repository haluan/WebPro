<h1>Listing abesnsis</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Status</th>
      <th>Mahasiswa</th>
      <th>Jadwal</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @abesnsis.each do |abesnsi| %>
      <tr>
        <td><%= abesnsi.status %></td>
        <td><%= abesnsi.siswa.nama %></td>
        <td><%= abesnsi.jadwal.hari %> <%=abesnsi.jadwal.tanggal%> <%=abesnsi.jadwal.kelas.nama%></td>
        <td><%= link_to 'Show', abesnsi %></td>
        <td><%= link_to 'Edit', edit_abesnsi_path(abesnsi) %></td>
        <td><%= link_to 'Destroy', abesnsi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

