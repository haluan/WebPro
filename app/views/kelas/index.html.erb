<h1>Daftar Kelas</h1>
<%= link_to '+ Kelas', new_kela_path, class:"btn btn-primary white", style:"color:white;"  %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nama</th>
    
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @kelas.each do |kela| %>
      <tr>
        <td><%= kela.nama %></td>
      
        <td><%= link_to 'Show', kela, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_kela_path(kela), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', kela, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


