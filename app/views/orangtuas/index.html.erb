<h1>Daftar Orangtua Murid</h1>
<%= link_to '+ Orangtua', new_orangtua_path, class:"btn btn-primary white", style:"color:white;" %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>NIK</th>
      <th>Nama</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orangtuas.each do |orangtua| %>
      <tr>
        <td><%= orangtua.NIK %></td>
        <td><%= orangtua.nama %></td>
        <td><%= link_to 'Show', orangtua, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_orangtua_path(orangtua), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', orangtua, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


