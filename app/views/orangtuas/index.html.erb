<h1>Listing orangtuas</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nik</th>
      <th>Nama</th>
      <th>Email</th>
      <th>Alamat</th>
      <th>Pekerjaan</th>
      <th>Agama</th>
      <th>Birthday</th>
      <th>Birthplace</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orangtuas.each do |orangtua| %>
      <tr>
        <td><%= orangtua.NIK %></td>
        <td><%= orangtua.nama %></td>
        <td><%= orangtua.email %></td>
        <td><%= orangtua.alamat %></td>
        <td><%= orangtua.pekerjaan %></td>
        <td><%= orangtua.agama %></td>
        <td><%= orangtua.birthday %></td>
        <td><%= orangtua.birthplace %></td>
        <td><%= link_to 'Show', orangtua %></td>
        <td><%= link_to 'Edit', edit_orangtua_path(orangtua) %></td>
        <td><%= link_to 'Destroy', orangtua, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

