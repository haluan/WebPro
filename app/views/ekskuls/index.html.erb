<h1>Daftar Ekstrakulikuler</h1>
<%= link_to 'New Ekskul', new_ekskul_path, class:"btn btn-primary white", style:"color:white;" %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nama</th>
      <th>Guru</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ekskuls.each do |ekskul| %>
      <tr>
        <td><%= ekskul.nama %></td>
        <td><%= ekskul.guru.nama %></td>
        <td><%= link_to 'Show', ekskul, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_ekskul_path(ekskul), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', ekskul, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

