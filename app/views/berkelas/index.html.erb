<h1>Daftar Kelas Siswa</h1>
<%= link_to '+ Kelas Siswa', new_berkela_path, class:"btn btn-primary white", style:"color:white;" %>
<table>
  <thead>
    <tr>
      <th>Tahun ajaran</th>
      <th>Mahasiswa</th>
      <th>Kelas</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @berkelas.each do |berkela| %>
      <tr>
        <td><%= berkela.tahun_ajaran %></td>
        <td><%= berkela.mahasiswa_id %></td>
        <td><%= berkela.kelas_id %></td>
        <td><%= link_to 'Show', berkela, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_berkela_path(berkela), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', berkela, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


