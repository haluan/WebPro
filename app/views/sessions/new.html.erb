<div class="hero-unit">
<h3>Signin</h3>

<div>
        <div>
                <%= form_for(:sessions, url: sessions_path) do |f|%>
                <div>
                        <%= f.label :email %>
                        <%= f.text_field :email%>
                </div>
                <div>
                        <%= f.label :password %>
                        <%= f.password_field :password%>
                </div>
                        <%= f.submit "sign in", class: "btn btn-large btn-primary"  %>
                <%end%>
        </div>
</div>
</div>