<h1>Daftar Jadwal</h1>
<%= link_to '+ Jadwal', new_jadwal_path, class:"btn btn-primary white", style:"color:white;"   %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Hari</th>
      <th>Jam</th>
      <th>Kelas</th>
      <th>Mengajar</th>
      <th>Tahun Ajaran</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jadwals.each do |jadwal| %>
      <tr>
        <td><%= jadwal.hari %></td>
    
        <td><%= jadwal.jam %></td>
        <td><%= jadwal.kela.nama %></td>
        <td><%= jadwal.mengajar.guru.nama %></td>
        <td><%= jadwal.mengajar.tahun_ajaran %></td>
        <td><%= link_to 'Show', jadwal, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_jadwal_path(jadwal), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', jadwal, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



